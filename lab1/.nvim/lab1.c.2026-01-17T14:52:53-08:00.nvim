#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void) {

  printf("Please enter some text: ");

  char *line = NULL;
  size_t size = 0;
  ssize_t read;

  // Loops forever
  while (read = getline(&line, &size, stdin) != -1) {

    // printf("Please enter some text: ");

    printf("%s", line);
  }

  free(line);

  return 0;
}
